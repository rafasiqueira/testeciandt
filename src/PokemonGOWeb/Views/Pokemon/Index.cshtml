
@{
    ViewBag.Title = "Pokémons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pokémons</h2>

<div class="row">
    <div class="col-lg-3">
        <a href="Pokemon/Create" class="btn btn-info">Criar Pokémon</a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-3">
        <input type="text" id="txtQuery" class="form-control left">
    </div>
    <div class="col-lg-3">
        <button type="button" id="btnBuscar" class="btn btn-default left">Buscar</button>
    </div>
</div>

<div id="pokemon-table">
    <!-- Pokemon list will be loaded here -->
</div>

<!-- Modal de confirmação de exclusão -->
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-top: -10px; margin-bottom: -10px;">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span>
                </button>
            </div>
            <div class="modal-body no-padding">
                <div class="callout no-margin callout-danger">
                    <div class="text-red fa-lg">
                        <i class="fa fa-warning"></i>
                        <b class="modal-title">Confirmação de exclusão</b>
                    </div>
                    <div class="row" style="margin-top: 5px;">
                        <div class="col-xs-12 alert-content">
                            Você realmente deseja excluir este Pokémon?<br />
                            <i>Após realizada a exclusão, não é possível reverter este processo.</i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <a class="btn btn-danger btn-ok" id="btnConfirmaExclusao">Sim, excluir</a>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            PokemonApp.Pages.Pokemon.Index.load();
        });
    </script>
}